            <field name="name">Ville d'envois</field>
            <field name="model">ville.envoi.colis</field>
            <field name="arch" type="xml">
                <form string="Villes d'envoi">
                        <p class="oe_grey">
                            Cr&#233;ez / &#233;ditez vos donn&#233;es sur les Villes d'envois des Colis
